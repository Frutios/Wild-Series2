{% extends 'base.html.twig' %}

{% block title %} Saison {{ season.number }} - {{ season.program.title }}{% endblock %}

{% block body %}

  <div class="media">
    <img class="align-self-start mr-3" src="{{season.program.poster}}" alt="{{ season.program.title }} poster">
    <div class="media-body">
      <h1 class="mt-0">Saison {{ season.number }}</h1>
      <p>{{ season.description }}</p>
      <p>Catégorie : {{ season.program.category.name }}</p>
    </div>
  </div>

  {% for episode in episodes %}
    <a class="category-link" href="/"> Episode {{ episode.number }}</a>
  {% endfor %}

  <a href="{{ path('program_index') }}">
    Retour à la liste des programmes
  </a>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
<h1>Toutes les catégories de la table category : </h1>
    <div class="category-button">
        {% for category in categories %}
            <a class="category-link" href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
        {% else %}
            Aucune catégorie trouvée.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
